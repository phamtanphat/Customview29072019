<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="#0A0A0A"
            android:textSize="25sp"
            android:text="@string/label_solar_panel"
            android:id="@+id/textviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/textviewTitle"
            android:textColor="#0A0A0A"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="@string/label_default_solar_panel"
            android:id="@+id/textviewDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.example.customview29072019.DefaultSolarItem
            android:layout_marginTop="10dp"
            android:id="@+id/group1"
            android:layout_below="@id/textviewDefault"
            android:layout_width="match_parent"
            app:textValueCell="60"
            android:layout_height="wrap_content"/>
        <com.example.customview29072019.DefaultSolarItem
            android:layout_marginTop="20dp"
            android:layout_below="@id/group1"
            android:layout_width="match_parent"
            app:textValueCell="60"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</ScrollView>